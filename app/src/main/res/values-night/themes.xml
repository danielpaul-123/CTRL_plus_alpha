        <item name="android:statusBarColor">#101010</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="custom_fab">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/custom_fab</item>
    </style>
