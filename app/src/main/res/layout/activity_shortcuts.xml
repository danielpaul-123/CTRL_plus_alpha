<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".shortcuts">

    <include
        android:id="@+id/tbar1"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/shut_down"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/round_button"
        app:srcCompat="@drawable/ic_baseline_add_a_photo_24"
        app:tint="@color/white"
        android:contentDescription="@string/scrbtn_use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <ImageButton
        android:id="@+id/restart"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/round_button"
        app:srcCompat="@drawable/ic_baseline_tab_24"
        app:tint="@color/white"
        android:contentDescription="@string/newtabbtn_use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <ImageButton
        android:id="@+id/sleep"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/round_button"
        app:srcCompat="@drawable/icons8_github_100"
        app:tint="@color/white"
        android:contentDescription="@string/viewprjbtn_use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <ImageButton
        android:id="@+id/lock"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/round_button"
        app:srcCompat="@drawable/ic_baseline_exit_to_app_24"
        app:tint="@color/white"
        android:contentDescription="@string/trmcntbtn_use"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

</androidx.constraintlayout.widget.ConstraintLayout>